{{- $userCount := len .Pages -}}
{
    "title": {{ .Title | jsonify }},
    "total": {{ $userCount | jsonify }},
    "users": {
        {{- range $i, $e := .Pages -}}
            "{{ .Params.customer_id }}": {
                "title": {{ .Title | jsonify }},
                "url": {{ .RelPermalink | jsonify }}
            }
            {{- if ne $userCount (add $i 1) -}},{{- end -}}
        {{- end -}}
    }
}