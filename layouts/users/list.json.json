{{- $userCount := len .Pages -}}
{
    "title": {{ .Title | jsonify }},
    "total": {{ $userCount | jsonify }},
    "users": {
        {{- range $i, $e := .Pages -}}
            "{{ .Params.customer_id }}": {
                "title": {{ .Title | jsonify }},
                "customer_id": {{ .Params.customer_id | jsonify }},
                "email": {{ .Params.email | jsonify }},
                "phone_number": {{ .Params.phone_number | jsonify }},
                "profile_photo": {{ .Params.profile_photo | jsonify }},
                "url": {{ .RelPermalink | jsonify }}
            }
            {{- if ne $userCount (add $i 1) -}},{{- end -}}
        {{- end -}}
    }
}