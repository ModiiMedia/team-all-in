{
  "name": "team-all-in",
  "version": "1.0.0",
  "description": "website for team all in",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile-gallery-js": "browserify scripts/gallery.js -o assets/js/gallery.js",
    "watch-gallery-js": "watchify scripts/gallery.js -o assets/js/gallery.js -v",
    "compile-js": "browserify scripts/main.js -o assets/js/main.js",
    "watch-js": "watchify scripts/main.js -o assets/js/main.js -v",
    "compile-css": "node-sass ./assets/sass/main.scss -o ./assets/css/ || node-sass ./assets/sass/gallery.scss -o ./assets/css/",
    "watch-css": "node-sass -w ./assets/sass -o ./assets/css",
    "prestart": "npm run predeploy",
    "start": "concurrently --kill-others \"npm run watch-css\" \"hugo server\"",
    "predeploy": "npm run compile-css || npm run compile-js || npm run compile-gallery-js",
    "deploy": "hugo --minify"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "browserify": "^16.2.3",
    "bulma": "^0.7.5",
    "lightgallery.js": "^1.1.3",
    "watchify": "^3.11.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "node-sass": "^4.12.0"
  }
}
